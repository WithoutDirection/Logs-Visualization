# Copy to /etc/logviz.env and adjust values

# Django
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=False
# Comma separated: domain(s) and/or IPs you use to access the site
DJANGO_ALLOWED_HOSTS=example.com,www.example.com,127.0.0.1,::1
# If serving behind HTTPS proxy, set CSRF trusted origins (comma separated, must include scheme)
DJANGO_CSRF_TRUSTED_ORIGINS=https://example.com,https://www.example.com
# Add your frontend origin(s) if different from localhost dev
DJANGO_CORS_ALLOWED_ORIGINS=https://example.com

# Database (optional: defaults to SQLite). If using Postgres, also install and configure, then use dj-database-url pattern:
# DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DBNAME
